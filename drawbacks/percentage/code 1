const express = require('express');
const router = express.Router();
const UserPercentage = require('../models/UserPercentage'); // Assuming a Mongoose schema/model for UserPercentage data

// GET user percentage data
router.get('/', async (req, res) => {
  try {
    const userPercentageData = await UserPercentage.find();
    res.json(userPercentageData);
  } catch (err) {
    res.status(500).json({ message: err.message });
  }
});

// POST user percentage data
router.post('/', async (req, res) => {
  const userPercentage = new UserPercentage(req.body);
  try {
    const newUserPercentage = await userPercentage.save();
    res.status(201).json(newUserPercentage);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
});

// PUT user percentage data
router.put('/:id', async (req, res) => {
  // Update logic based on the provided ID
});

// DELETE user percentage data
router.delete('/:id', async (req, res) => {
  // Deletion logic based on the provided ID
});

